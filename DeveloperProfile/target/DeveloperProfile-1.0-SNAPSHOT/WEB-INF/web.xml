<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
   version="6.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <servlet>
        <servlet-name>HabilidadListServlet</servlet-name>
        <servlet-class>com.perfilprofesional.controller.HabilidadListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HabilidadListServlet</servlet-name>
        <url-pattern>/habilidades</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HabilidadAddServlet</servlet-name>
        <servlet-class>com.perfilprofesional.controller.HabilidadAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HabilidadAddServlet</servlet-name>
        <url-pattern>/habilidades/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HabilidadEditServlet</servlet-name>
        <servlet-class>com.perfilprofesional.controller.HabilidadEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HabilidadEditServlet</servlet-name>
        <url-pattern>/habilidades/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HabilidadDeleteServlet</servlet-name>
        <servlet-class>com.perfilprofesional.controller.HabilidadDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HabilidadDeleteServlet</servlet-name>
        <url-pattern>/habilidades/delete</url-pattern>
    </servlet-mapping>

</web-app>
